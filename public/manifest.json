{
  "manifest_version": 3,
  "name": "Crypto Vibe Dashboard",
  "version": "1.0.0",
  "description": "AI-powered crypto market sentiment dashboard",
  "permissions": ["storage", "alarms"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "host_permissions": [
    "https://api.coingecko.com/*",
    "https://generativelanguage.googleapis.com/*"
  ]
}
